@model CaucasianPearl.Models.EDM.Event

@using CaucasianPearl.Core.Constants
@using Resources.Event
@using Resources.Shared

@{
    ViewBag.Title = string.Format("{0} | {1}", EventViewRes.EventDeleting, Consts.Title);
}

<p>
    @Html.ActionLink(SharedViewRes.Cancel,
        actionName: Consts.Actions.GetByShortName,
        routeValues: new
        {
            shortname = Model.ShortName,
            page = Request.QueryString["page"]
        },
        htmlAttributes: new { @class = "link" }
    )
</p>

<h2 style="color: Red">@EventViewRes.AreYouSureThatYouWantDeleteThisEvent</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="@SharedViewRes.Delete" />
}
