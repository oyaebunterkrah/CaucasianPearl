@model CaucasianPearl.Models.EDM.Request

@using CaucasianPearl.Core.Constants
@using Resources.Shared
@using Resources.Request

@{
    ViewBag.Title = SharedViewRes.Edit;
}

<script src="@Url.Content("~/content/scripts/sys/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/content/scripts/sys/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>SharedViewRes.Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@RequestViewRes.Request</legend>

        @Html.HiddenFor(model => model.ID)
		@Html.Partial(Consts.Views.CreateOrEdit, Model)

        <p>
            <input type="submit" value="@SharedViewRes.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(RequestViewRes.BackToList, Consts.Actions.Index)
</div>
