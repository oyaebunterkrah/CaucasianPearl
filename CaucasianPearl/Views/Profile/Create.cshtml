@using CaucasianPearl.Models.EDM
@using CaucasianPearl.Core.Constants
@using CaucasianPearl.Resources;

@model Profile

@{ ViewBag.Title = string.Format("{0} | {1}", ViewRes.ProfileCreating, ViewRes.ProjectTitleShort); }

<h2>@ViewRes.ProfileCreating</h2>

<br />

@using (Html.BeginForm()) {
    @Html.ValidationSummary()
    <fieldset>
        <legend>@ViewRes.UserProfile</legend>

		@Html.Partial(Consts.Views.CreateOrEdit, Model)
        
        <p>
            <input id="submit" type="submit" value="@ViewRes.Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(ViewRes.BackToList, Consts.Actions.Index)
</div>