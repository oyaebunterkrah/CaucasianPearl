@model CaucasianPearl.Models.EDM.OneNews

@using CaucasianPearl.Core.Constants
@using Resources.News
@using Resources.Shared

@{
    ViewBag.Title = string.Format("{0} | {1}", NewsViewRes.NewsCreating, Consts.Title);
}

<p>
    @Html.ActionLink(
        SharedViewRes.Cancel, actionName: Consts.Actions.GetByShortName,
        routeValues: new
        {
            shortname = Model.ShortName,
            page = Request.QueryString["page"]
        },
        htmlAttributes: new { @class = "link" })
</p>

<h2 style="color: Red">@NewsViewRes.AreYouSureThatYouWantDeleteThisNews</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="@SharedViewRes.Delete" />
}
