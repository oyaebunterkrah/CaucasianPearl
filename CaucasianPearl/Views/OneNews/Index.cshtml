@model IEnumerable<OneNews>

@using CaucasianPearl.Core.Constants
@using CaucasianPearl.Core.EntityServices.Interface
@using CaucasianPearl.Core.Helpers.HtmlHelpers
@using CaucasianPearl.Core.UserControls
@using CaucasianPearl.Core.Helpers
@using CaucasianPearl.Models
@using CaucasianPearl.Models.EDM
@using Resources.News
@using Resources.Shared

@{
    ViewBag.Title = string.Format("{0} - {1}", SharedRes.ProjectTitle, NewsViewRes.News);
}

<p>
    @Html.ActionLink(
        SharedViewRes.ToHomePage,
        actionName: Consts.Actions.Index,
        controllerName: Consts.Controllers.Home.Name,
        routeValues: null,
        htmlAttributes: new { @class = "link" }
         )
    @Consts.BreadcrumbsSeparator
    @NewsViewRes.News
</p>

@if (WebSecurity.IsAuthenticated && (Roles.IsUserInRole(Consts.Roles.Admin) || Roles.IsUserInRole(Consts.Roles.ContentManager)))
{
    <p>
        @Html.ActionLink(
            NewsViewRes.CreateNews,
            actionName: Consts.Actions.Create,
            controllerName: Consts.Controllers.OneNews.Name,
            routeValues: null,
            htmlAttributes: new { @class = "link" }
        )
    </p>
}

<table>
    @foreach (var oneNews in Model)
    {
        <tr>
            <td style="text-align: center;">
                <div class="model-image">
                    @Html.ActionImage(
                        Consts.Actions.GetByShortName,
                        controller: Consts.Controllers.OneNews.Name,
                        routeValues: new { shortname = oneNews.ShortName },
                        imagePath: ImageHelper.GetImageUrl(oneNews, Consts.Controllers.OneNews.OneNewsImagesFolder),
                        alt: oneNews.Name
                    )
                </div>
            </td>
            <td style="text-align: center;">
                @Html.ActionLink(
                    oneNews.Name,
                    actionName: Consts.Actions.GetByShortName,
                    controllerName: Consts.Controllers.OneNews.Name,
                    routeValues: new { shortname = oneNews.ShortName },
                    htmlAttributes: new { @class = "link" }
                     )
                |
            </td>

            @if (WebSecurity.IsAuthenticated && (Roles.IsUserInRole(Consts.Roles.Admin) || Roles.IsUserInRole(Consts.Roles.ContentManager)))
            {
                <td>
                    <!-- Вверх -->
                    @Html.ActionLink(
                        SharedViewRes.Up,
                        Consts.Actions.Up,
                        new { id = oneNews.ID }
                         ) |
                </td>
                <td>
                    <!-- Вниз -->
                    @Html.ActionLink(
                        SharedViewRes.Down,
                        Consts.Actions.Down,
                        new { id = oneNews.ID }
                    )
                </td>
            }
        </tr>
    }
</table>

<br /><br />

<div class="paginator">
    @Html.Partial(
        Consts.UserControlsPaths.PaginatorControl,
        (PaginatorControl.GetLinks(
            ServiceHelper<IUrlFriendlyService<OneNews>>.GetService().Count(Request.QueryString),
            Consts.PaginatorControl.NewsItemsPerPage,
            Consts.PaginatorControl.NewsNumberOfVisibleLinks)
        )
    )
</div>