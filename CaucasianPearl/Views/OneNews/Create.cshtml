@using CaucasianPearl.Core.Constants
@using CaucasianPearl.Core.UserControls
@using Resources.News
@using Resources.Shared

@model CaucasianPearl.Models.EDM.OneNews

@{
    ViewBag.Title = string.Format("{0} | {1}", NewsViewRes.NewsCreating, Consts.Title);
}

@Html.Raw(CssJsRegControl.Render(Consts.Paths.CKEditor))

<script type="text/javascript">
    $(document).ready(function () {
        replaceByCKEditor('@Url.Content(Consts.Paths.CKEditorConfig)', 'Content', 'submit');
    });
</script>

<p>
    @Html.ActionLink(
        @SharedViewRes.Cancel,
        actionName: Consts.Actions.Index,
        controllerName: Consts.Controllers.OneNews.Name,
        routeValues: new { page = Request.QueryString["page"] },
        htmlAttributes: new { @class = "link" }
    )
</p>

<h2>@NewsViewRes.NewsCreating</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@NewsViewRes.News</legend>

		@Html.Partial(Consts.Views.CreateOrEdit, Model)

        <input id="submit" type="submit" value="@SharedViewRes.Create" />
    </fieldset>
}