@using CaucasianPearl.Core.Constants
@using Resources

@model CaucasianPearl.Models.EDM.Feedback

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>@ViewRes.YouSureYouWantToDeleteThis</h3>
<fieldset>
    <legend>Feedback</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">City</div>
    <div class="display-field">@Model.City</div>

    <div class="display-label">Comment</div>
    <div class="display-field">@Model.Comment</div>

    <div class="display-label">FeedbackDateTime</div>
    <div class="display-field">@string.Format("{0:g}", Model.Created)</div>

    <div class="display-label">IsApproved</div>
    <div class="display-field">@Model.IsApproved</div>
</fieldset>

@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
