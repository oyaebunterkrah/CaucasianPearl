@using CaucasianPearl;
@using CaucasianPearl.Core.Constants
@using CaucasianPearl.Core.Helpers
@using CaucasianPearl.Core.Helpers.HtmlHelpers

@if (CultureHelper.CurrentCulture == CultureHelper.Hy) {
    @Html.ActionImage(
        action: Consts.Controllers.Account.Actions.ChangeCulture,
        controller: Consts.Controllers.Account.Name,
        routeValues: new {
            lang = Consts.Culture.Ru,
            returnUrl = Request.RawUrl
        },
        imagePath: Url.Content(Path.Combine(Consts.Paths.Img.SiteImgFolder, "flag-ru.png")),
        alt: "Русский")
    } else {
    @Html.ActionImage(
        action: Consts.Controllers.Account.Actions.ChangeCulture,
        controller: Consts.Controllers.Account.Name,
        routeValues: new {
            lang = Consts.Culture.Hy,
            returnUrl = Request.RawUrl
        },
        imagePath: Url.Content(Path.Combine(Consts.Paths.Img.SiteImgFolder, "flag-hy.png")),
        alt: "Հայերեն")
}