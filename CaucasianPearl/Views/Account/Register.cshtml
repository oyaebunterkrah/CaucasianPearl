@using CaucasianPearl.Core.Constants
@using CaucasianPearl.Models
@using CaucasianPearl.Resources

@model RegisterModel

@{ ViewBag.Title = string.Format("{0} | {1}", ViewRes.Register, ViewRes.ProjectTitleShort); }

<hgroup class="title">
    <h1>@ViewRes.RegisterNewAccount</h1>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
    </fieldset>
    
    <input type="submit" value="@ViewRes.Register" />
}